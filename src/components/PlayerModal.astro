---
import type { PlayersByPosition } from "@/types/player";

interface Props {
  playersByPosition: PlayersByPosition[];
}
const { playersByPosition } = Astro.props;
---

<div class="px-4 py-12 mx-auto space-y-24 max-w-7xl">
  {
    playersByPosition.map(({ position, players }) => (
      <section>
        <h2 class="relative mb-10 text-3xl font-extrabold tracking-tight text-primary">
          <span class="relative z-10">{position}s</span>
        </h2>

        <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 ">
          {players.map((player) => (
            <a href={`/chivas/jugadores/${player.slug}`}>
              {/* <button
                key={player.name}
                onClick={() => openModal(player)}
                class="relative overflow-hidden text-left transition-shadow duration-300 bg-white border border-gray-200 shadow-sm cursor-pointer rounded-2xl hover:shadow-xl group"
              > */}
              <img
                src={player.image}
                alt={player.name}
                class="object-contain w-full h-64 transition-transform duration-300 bg-white group-hover:scale-105"
                transition:name={`img-${player.slug}`}
              />
              <div class="p-5 text-center">
                <h3 class="text-xl font-semibold text-gray-800 transition-colors duration-200 group-hover:text-primary">
                  {player.name}
                </h3>
                <p class="mt-1 text-sm text-gray-500">#{player.number}</p>
              </div>
              {/* </button> */}
            </a>
          ))}
        </div>
      </section>
    ))
  }
</div>
