---
import PlayerModal from "@/components/PlayerModal.tsx";
import { players } from "@/content/players";
import type { PlayersByPosition } from "@/types/player";

const position = ["Portero", "Defensa", "Mediocampista", "Delantero"];

const playersByPosition: PlayersByPosition[] = position.map((pos) => ({
  position: pos,
  players: players.filter((j) => j.position === pos),
}));
---

<PlayerModal client:load playersByPosition={playersByPosition} />
