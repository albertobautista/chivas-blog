---
import BubbleBackground from "@/components/BubbleBackground.astro";
import DotBackground from "../components/DotBackground.astro";
---

<section class="relative" id="inicio">
  <DotBackground />

  <div
    class="relative w-full h-screen mx-auto mb-16 bg-theme-primary md:aspect-video md:h-full md:object-cover"
  >
